        <vm:ProfileModel/>
    </Design.DataContext>
    <ScrollViewer>
        <StackPanel>
            <controls:ST_ProgessBar Margin="0 40"  Sections="Order information, Delivery address, Payment method, Checkout window" SelectedSection="0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
