<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="353" d:DesignHeight="1385"
             x:Class="SmartTrade.Views.SendView"
			 xmlns:vm="clr-namespace:SmartTrade.ViewModels"
			 x:DataType="vm:SendViewModel"
			 xmlns:controls="clr-namespace:SmartTrade.Controls">
	<Design.DataContext>
		<vm:SendViewModel/>
	</Design.DataContext>
	<ScrollViewer  VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
		<StackPanel Margin="10">
			<controls:ST_ProgessBar Margin="0 20"  Sections="Pending,Shipped,Delivered" SelectedSection="0"/>
			<controls:ST_ProductSendView Margin="10 0" Command="{Binding OpenProductCommand}" Image="{Binding Image}" Price="{Binding Price}" ShippingCost="{Binding ShippingCost}" ProductName="{Binding Name}"/>
			<TextBlock Classes="h2" HorizontalAlignment="Left" Margin="20 50 0 20">Delivery address</TextBlock>
			<TextBlock Classes="h3" HorizontalAlignment="Left" Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DeliveryAdress, Mode=OneWay}" Margin="20 0 0 0"></TextBlock>
			<TextBlock Classes="h2" HorizontalAlignment="Left" Margin="20 15 0 20">Facturation address:</TextBlock>
			<TextBlock Classes="h3" HorizontalAlignment="Left" Margin="20 0 0 0">Facturation address:</TextBlock>
			<Slider Name="RatingSlider" Maximum="5" MaxWidth="150" Margin="-150 20 0 0" ></Slider>
			<Grid ColumnDefinitions="* * * * *" MaxWidth="200" HorizontalAlignment="Left" Margin="15 0 0 0">
				<ToggleButton Grid.Column="0" IsChecked="{Binding Star1Selected}" BorderThickness="0" Width="25" Name="RatingStar1">
					<Image Source="../Assets/VoidStar.png" Width="25" Name="Star1"/>
                </ToggleButton>
                <ToggleButton Grid.Column="1" IsChecked="{Binding Star2Selected}" BorderThickness="0" Width="25" Name="RatingStar2">
                    <Image Source="../Assets/VoidStar.png" Width="25" Name="Star2"/>
                </ToggleButton>
                <ToggleButton Grid.Column="2" IsChecked="{Binding Star3Selected}" BorderThickness="0"  Width="25" Name="RatingStar3">
                    <Image Source="../Assets/VoidStar.png" Width="25" Name="Star3"/>
                </ToggleButton>
                <ToggleButton Grid.Column="3" IsChecked="{Binding Star4Selected}" BorderThickness="0" Width="25" Name="RatingStar4">
                    <Image Source="../Assets/VoidStar.png" Width="25" Name="Star4"/>
                </ToggleButton>
                <ToggleButton Grid.Column="4" IsChecked="{Binding Star5Selected}" BorderThickness="0" Width="25" Name="RatingStar5">
                    <Image Source="../Assets/VoidStar.png" Width="25" Name="Star5"/>
                </ToggleButton> 
            </Grid>
        </StackPanel>
	</ScrollViewer>		
</UserControl>
