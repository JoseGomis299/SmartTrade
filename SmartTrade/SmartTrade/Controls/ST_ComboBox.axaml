<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:Class="SmartTrade.Controls.ST_ComboBox">
    <StackPanel Orientation="Horizontal">
        <TextBlock Name="MyTextBlock" Width="120" VerticalAlignment="Center" Classes="h2" Text="Label Text" TextWrapping="Wrap" TextAlignment="Right"></TextBlock>
        <ComboBox Name="MyComboBox" VerticalAlignment="Center"  Margin="10, 0" PlaceholderText="Select..." Width="200"  Height="40" ></ComboBox>
	</StackPanel>
</UserControl>
