<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SmartTrade.Controls.ST_Count">
<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
    <Button Width="30" Content="+" Classes="White" Name="AddButton"/>
    <TextBlock Margin="5 0" Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Count, Mode=OneWay}" Classes="h2" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Left"></TextBlock>
    <Button Width="30" Content="-" Classes="White" Name="SubtractButton"/>
</StackPanel>
</UserControl>
